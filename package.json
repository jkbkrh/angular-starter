{
  "name": "angular-starter",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest --coverage",
    "prettier-check": "prettier . --check",
    "lint-format": "prettylint .",
    "lint-code": "ng lint --max-warnings 0",
    "lint-style": "stylelint **/*.{css,scss,sass,less}",
    "lint": "run-s lint-code lint-style lint-format",
    "check": "run-s lint test",
    "prepare": "husky install",
    "pre-commit-bypass": "git commit --no-verify"
  },
  "lint-staged": {
    "**/*.{ts,html}": [
      "ng-lint-staged lint-code --"
    ],
    "**/*.{css,scss,sass,less}": [
      "stylelint"
    ],
    "**/*": [
      "prettylint"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.0",
    "@angular/common": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/core": "^16.2.0",
    "@angular/forms": "^16.2.0",
    "@angular/platform-browser": "^16.2.0",
    "@angular/platform-browser-dynamic": "^16.2.0",
    "@angular/router": "^16.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.9",
    "@angular-eslint/builder": "16.2.0",
    "@angular-eslint/eslint-plugin": "16.2.0",
    "@angular-eslint/eslint-plugin-template": "16.2.0",
    "@angular-eslint/schematics": "16.2.0",
    "@angular-eslint/template-parser": "16.2.0",
    "@angular/cli": "^16.2.9",
    "@angular/compiler-cli": "^16.2.0",
    "@types/jest": "^29.5.7",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-preset-angular": "^13.1.2",
    "lint-staged": "^15.0.2",
    "ng-lint-staged": "^12.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "3.0.3",
    "prettylint": "^2.0.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "typescript": "~5.1.3"
  }
}
